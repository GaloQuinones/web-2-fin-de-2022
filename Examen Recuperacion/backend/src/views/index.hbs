    <div class="alert alert-danger alert-dismissible fade show w-50 d-flex justify-content-center" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
